@{
    ViewData["Title"] = "Home Page";
}

<div id="ligaProCarousel" class="carousel slide mb-5" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/liga1.jpg" class="d-block w-100" alt="Liga Pro 1">
        </div>
        <div class="carousel-item">
            <img src="~/images/liga2.jpg" class="d-block w-100" alt="Liga Pro 2">
        </div>
        <div class="carousel-item">
            <img src="~/images/liga3.jpg" class="d-block w-100" alt="Liga Pro 3">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#ligaProCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#ligaProCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>
